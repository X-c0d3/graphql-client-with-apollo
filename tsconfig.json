{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "build",
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": ".",
      "lib": [
        "dom",
        "es2015",
        "esnext.asynciterable"
      ],
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }